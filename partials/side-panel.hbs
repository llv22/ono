<header class="panel-cover {{#if post}}panel-cover--collapsed{{/if}}" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
  <div class="panel-main">

    <div class="panel-main__inner panel-inverted">
    <div class="panel-main__content">

        {{#if @blog.logo}}
        <a href="{{@blog.url}}" title="link to home of {{@blog.title}} "><img src="{{@blog.logo}}" width="80" alt="{{@blog.title}} logo" class="panel-cover__logo logo" /></a>
        {{/if}}
        <h1 class="panel-cover__title panel-title"><a href="{{@blog.url}}" title="link to home of {{@blog.title}}">{{@blog.title}}</a></h1>
        <span class="panel-cover__subtitle panel-subtitle">不积小流,无以成江海</span>
        <hr class="panel-cover__divider" />
        <p class="panel-cover__description">{{@blog.description}}</p>
        <hr class="panel-cover__divider panel-cover__divider--secondary" />

        <div class="navigation-wrapper">
          <div>
          <nav class="cover-navigation cover-navigation--primary">
            <ul class="navigation">
              <li class="navigation__item"><a href="/#blog" title="To Blog" class="blog-button">Blog</a></li> 
              <li class="navigation__item"><a href="http://cloud.orlando23.com:8085/aboutme/" title="About Me">Me</a></li>
              <li class="navigation__item"><a href="http://eepurl.com/" title="Email Subscribe">Subscribe</a></li>
            </ul>
          </nav>
          </div>

          {{> social}}
          
        </div>

      </div>

    </div>

    <div class="panel-cover--overlay cover-green"></div>
  </div>
</header>
