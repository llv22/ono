<div class="read-more">
   {{#next_post}}
   <div class="read-more-item read-more-item-left">
       <span class="read-more-item-dim">Recent Posts</span>
       <h4 class="post-list__post-title post-title"><a href="{{url}}" title="link to {{{title}}}">{{{title}}}</a></h4>
       <p class="excerpt">{{excerpt characters="20"}}&hellip;</p>
       <div class="post-list__meta"><time datetime="{{date format="DD MMM YYYY"}}" class="post-list__meta--date date">{{date format="DD MMM YYYY"}}</time> &#8226; <span class="post-list__meta--tags tags">{{tags prefix="In "}}</span><a class="btn-border-small" href={{url}}>More</a></div>
   </div>
   {{/next_post}}

   {{#prev_post}}
   <div class="read-more-item read-more-item-right">
       <span class="read-more-item-dim">Older Posts</span>
       <h4 class="post-list__post-title post-title"><a href="{{url}}" title="link to {{{title}}}">{{{title}}}</a></h4>
       <p class="excerpt">{{excerpt characters="20"}}&hellip;</p>
       <div class="post-list__meta"><time datetime="{{date format="DD MMM YYYY"}}" class="post-list__meta--date date">{{date format="DD MMM YYYY"}}</time> &#8226; <span class="post-list__meta--tags tags">{{tags prefix="In "}}</span><a class="btn-border-small" href={{url}}>More</a></div>
   </div>
   {{/prev_post}}
</div>
