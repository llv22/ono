      var disqus_shortname = 'orlando23'; // required: replace example with your forum shortname
      

      /* * * DON'T EDIT BELOW THIS LINE * * */
      (function() {
          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
          dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
          // see : if js is avaiable or not
          var request;
          if(window.XMLHttpRequest) {
              // see: https://developer.mozilla.org/en-US/docs/Web/API/XMLHttpRequest/timeout
              request = new XMLHttpRequest();
              request.timeout = 2000; // 2 seconds for timout
              // see : https://developer.mozilla.org/en-US/docs/Web/API/XMLHttpRequest/Synchronous_and_Asynchronous_Requests
              request.ontimeout = function () {
                    console.error("The request for " + dsq.src + " timed out.");
              };
          }
          else {
              request = new ActiveXObject("Microsoft.XMLHTTP");
          }
          request.open('GET', dsq.src, true);
          request.onreadystatechange = function(){
              if (request.readyState === 4){
                  if (request.status === 200) {  
                     (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                  }  
              }
          };
          request.send(null);
      })();
  </script>
